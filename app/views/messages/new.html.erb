<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Message</title>
  </head>
  <body>
    <div class="row">
      <div class="col s12">
        <div class="content">
          <h3>New Message</h3>
          <h5>To: <%= link_to @receiver.full_name, user_path(@receiver) %> </h5>
          <%= form_for @message do |f| %>
          <%= f.label :message %>
          <%= f.text_area :description %>
          <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
