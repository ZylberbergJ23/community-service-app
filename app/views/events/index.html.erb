<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All Events</title>
  </head>
  <body>
    <div class="row">
      <div class="col s12">
        <div class="content title">
          <h3>All Events</h3>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="content">
          <h4> Ongoing Volunteer Events </h4>
          <ul>
            <% Event.ongoing_events.each do |event| %>
            <li><%= link_to event.title, event_path(event) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="content">
          <h4> Upcoming Volunteer Events</h4>
          <ul>
            <% @events.upcoming_events.each do |event| %>
            <li><%= link_to event.title, event_path(event) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="content">
          <h4> Past Volunteer Events </h4>
          <ul>
            <% @events.past_events.each do |event| %>
            <li><%= link_to event.title, event_path(event) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
