<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Event</title>
  </head>
  <body>
    <div class="row">
    </div>
    <div class="row">
      <div class="col s12">
          <div class="content title">
            <h1>Create An Event</h1>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
          <div class="content">
            <p class="error"><%= flash[:message] if flash[:message] %></p>
            <%= form_for @event do |f| %>
            <%= f.label :title %><br>
            <%= f.text_field :title %><br><br>
            <%= f.label :description %><br>
            <%= f.text_area :description %><br><br>
            <div class="row">
              <%= f.label "Start date" %>
            </div>
            <div class="row">
              <%= f.datetime_select :start_date, {:ampm => true, :minute_step => 15}, {class: 'browser-default datetime inline'} %>
            </div>
            <div class="row">
              <%= f.label "End date" %>
            </div>
            <div class="row">
              <%= f.datetime_select :end_date, {:ampm => true, :minute_step => 15}, {class: 'browser-default datetime inline'}%>
            </div>
            <%= f.submit %>
            <% end %>
          </div>
      </div>
    </div>
  </body>
</html>
