<!DOCTYPE html>
<html>
  <head>
    <title>CommunityServiceApp</title>
    <%= csrf_meta_tags %>  

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <nav>
      <div class="nav-wrapper">
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <li><%= link_to image_tag("manatee.jpg"), root_path, {class: "brand-logo"} %></li>
        </ul>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if logged_in? %>
            <li><%= link_to current_user.full_name, user_path(current_user) %></li>
            <li><%= link_to "Log Out", logout_path, method: :delete %></li>
            <li><%= link_to "Create Event", new_event_path %></li>
          <% else %>
            <li><%= link_to "Sign Up", signup_path %></li>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
          <li><%= link_to "Events", events_path %></li>
          <li><%= link_to "Statistics", statistics_path %></li>
        </ul>
      </div>
    </nav>
    <%= form_tag search_path, :method => :get do %>
      <div class="input-field">
          <%= text_field_tag :name, params[:name], :id =>"search", :type => "search"%>
          <label for="search"><i class="material-icons"></i></label>
        <i class="material-icons">Search For User</i>
    </div>
    <% end %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
